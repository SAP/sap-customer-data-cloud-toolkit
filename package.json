{
  "name": "cdc-tools-chrome-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cypress/xvfb": "^1.2.4",
    "@reduxjs/toolkit": "^1.8.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@ui5/webcomponents": "^1.9.0",
    "@ui5/webcomponents-fiori": "^1.9.0",
    "@ui5/webcomponents-icons": "^1.9.0",
    "@ui5/webcomponents-react": "^1.1.0",
    "@webcomponents/custom-elements": "^1.5.0",
    "axios": "^1.1.3",
    "i18next": "^22.0.4",
    "istanbul-merge": "^1.1.1",
    "jszip": "^3.10.1",
    "os": "^0.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^9.0.10",
    "react-redux": "^8.0.4",
    "redux": "^4.2.0",
    "redux-mock-store": "^1.5.4",
    "sass": "^1.55.0",
    "wait-on": "^6.0.1",
    "web-vitals": "^3.0.3"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "CI=true react-scripts build",
    "cypress:open": "cypress open",
    "cypress:stage": "cypress run --headless",
    "cypress:ci": "start-server-and-test start http://localhost:3000 cypress:stage",
    "postbuild": "node ./scripts/postbuild.js",
    "test": "CI=true react-scripts test --collect-coverage --coverage --watch=all --coverageDirectory=coverage/unit",
    "eject": "react-scripts eject",
    "lint": "npx eslint --ext .jsx,.js src/",
    "prerelease": "npm run lint && npm run test",
    "release": "CI=true release-it",
    "compress": "zip -r ${npm_package_name}-${npm_package_version}.zip ./build/",
    "manifest": "./public/scripts/manifest.sh ${npm_package_version}"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@ui5|lit-html|@babel|axios)).*\\.js$"
    ]
  },
  "nyc": {
    "excludeAfterRemap": true,
    "report-dir": "coverage/cypress",
    "reporter": [
      "text",
      "json",
      "lcov"
    ],
    "include": [
      "src"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@bahmutov/cypress-code-coverage": "^1.3.1",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/instrument-cra": "^1.4.0",
    "babel-plugin-istanbul": "^6.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "concurrently": "^7.4.0",
    "cypress": "^10.11.0",
    "cypress-jest-coverage-merge": "^1.0.2",
    "istanbul": "^0.4.5",
    "nyc": "^15.1.0",
    "prettier": "2.7.1",
    "react-scripts": "5.0.0",
    "release-it": "^15.5.0",
    "start-server-and-test": "^1.14.0"
  }
}
